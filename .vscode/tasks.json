{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake-configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-B",
        "${workspaceFolder}/build",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DBUILD_PLAYGROUNDS=ON"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "build-all",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "${workspaceFolder}/build", "--", "-j2"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": ["cmake-configure"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build-debug_arrays",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build",
        "--target",
        "debug_arrays"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": ["cmake-configure"],
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build-debug_linked_list",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build",
        "--target",
        "debug_linked_list"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": ["cmake-configure"],
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build-tests",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "${workspaceFolder}/build", "--target", "unit_tests"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": ["cmake-configure"],
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build-leetcode_0001",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build",
        "--target",
        "leetcode_0001"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": ["cmake-configure"],
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build-current-file",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build",
        "--target",
        "${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": ["cmake-configure"],
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "${workspaceFolder}/build"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
